<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UltimateTexasHoldemMauiApp.MainPage"
             Loaded="OnContentPageLoaded">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">

            <Label
                Text="Ultimate Texas Hold'em Solver"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry 
                x:Name="entryInput"
                FontSize="16"
                TextChanged="OnCardsTextChanged"
                Placeholder="Enter cards here"
                />

            <Label
                x:Name="labelOutput"
                FontSize="16"
                Text=""
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
